<%- include('../partials/_header.ejs') %>
    <%- include('../partials/_github-corner.ejs') %>
        <%- include('../partials/_navbar.ejs') %>

            <div class="container" style="display: flex; justify-content: center;align-items: center;">

                <div class="col-md-6 text-center">
                    <div class="container">

                        <div class="card">
                            <div class="card-header"> <i class="fas fa-user-plus"></i> Register </div>


                            <div class="card-body">
                                <form action="/users/register" method="POST">
                                    <div class="form-group">
                                        <input type="text" name="name" placeholder="Name"
                                            value="<%= typeof (name) != 'undefined' ? name : '' %>" class="form-control"
                                            required />
                                    </div>

                                    <div class="form-group">
                                        <input type="email" placeholder="Email" name="email"
                                            value="<%= typeof (email) != 'undefined' ? email : '' %>"
                                            class="form-control" required />
                                    </div>


                                    <div class="form-group">
                                        <input type="password" name="password" placeholder="Password"
                                            value="<%= typeof (password) != 'undefined' ? password : '' %>"
                                            class="form-control" required />
                                    </div>

                                    <div class="form-group">
                                        <input type="password" name="confirmPassword" placeholder="Re-enter Password.."
                                            value="<%= typeof (confirmPassword) != 'undefined' ? confirmPassword : '' %>"
                                            class="form-control" required />
                                    </div>

                                    <input type="text" name="role" value="user" hidden>

                                    <button class="btn btn-primary btn-block" type="submit">Register</button>

                                </form>
                            </div>
                        </div>
                    </div>

                    <%- include('../partials/_messages.ejs') %>
                </div>







            </div>








            <br><br><br><br><br><br><br>
